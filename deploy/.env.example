# ============================================
# AI Perp DEX - Environment Configuration
# ============================================
# Copy to .env and fill in your values

# ============================================
# API Server Configuration
# ============================================
API_ENV=development                # development | staging | production
LOG_LEVEL=INFO                     # DEBUG | INFO | WARNING | ERROR

# Server
HOST=0.0.0.0
PORT=8082
MAX_CONCURRENT_REQUESTS=100
RATE_LIMIT_PER_AGENT=10            # requests per second per agent
GLOBAL_RATE_LIMIT=500              # total requests per second

# ============================================
# Security & Authentication
# ============================================
# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# API Key salt (for hashing)
API_KEY_SALT=random-salt-for-key-hashing

# ============================================
# Database / Cache
# ============================================
# Redis URL
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=                     # optional

# ============================================
# External Services
# ============================================
# Hyperliquid API (for external routing)
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz
HYPERLIQUID_API_KEY=                # optional, for authenticated endpoints
HYPERLIQUID_WALLET_ADDRESS=         # your trading wallet

# Solana RPC
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_DEVNET_RPC=https://api.devnet.solana.com

# ============================================
# CORS & Security
# ============================================
# Comma-separated allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8082

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8082
NEXT_PUBLIC_WS_URL=ws://localhost:8082/ws

# ============================================
# Monitoring & Observability (Optional)
# ============================================
# Sentry DSN
SENTRY_DSN=

# Prometheus metrics
METRICS_ENABLED=false
METRICS_PORT=9091

# ============================================
# Feature Flags
# ============================================
ENABLE_EXTERNAL_ROUTING=true       # Route unmatched orders to Hyperliquid
ENABLE_SIGNAL_BETTING=true         # Enable prediction betting
ENABLE_FUNDING_PAYMENTS=true       # Enable funding rate payments
ENABLE_ONCHAIN_SETTLEMENT=false    # Enable Solana escrow (requires setup)

# ============================================
# Risk Management
# ============================================
DEFAULT_MAX_LEVERAGE=100           # Maximum leverage allowed
DEFAULT_MAX_POSITION_SIZE=100000   # Max position size in USDC
DEFAULT_MAX_DAILY_LOSS=10000       # Max daily loss limit in USDC

# ============================================
# Production Only
# ============================================
# SSL/TLS (if not using reverse proxy)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
